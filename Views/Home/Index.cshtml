@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<?xml version="1.0" encoding="UTF-8" ?>

@model IEnumerable<Evenimente>

<h2>Evenimente și Participanți</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nume Eveniment</th>
            <th>Data Eveniment</th>
            <th>Participanți</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eveniment in Model)
        {
            <tr>
                <td>@eveniment.durata</td>
                <td>@eveniment.nrparticipanti</td>
                <td>
                    @foreach (var participant in eveniment.P)
                    {
                        <p>@participant.nume</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>